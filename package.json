{
  "name": "next-sanity",
  "version": "0.6.0",
  "description": "Sanity.io toolkit for Next.js",
  "keywords": [
    "sanity",
    "sanity.io",
    "next.js"
  ],
  "homepage": "https://github.com/sanity-io/next-sanity#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/next-sanity/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/next-sanity.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/next-sanity.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "scripts": {
    "build": "tsdx build",
    "coverage": "tsdx test --coverage",
    "lint": "eslint .",
    "prepublishOnly": "tsdx build && npm test",
    "start": "tsdx watch",
    "test": "tsdx test",
    "posttest": "npm run lint"
  },
  "browserslist": "chrome 59, safari 11, firefox 56, edge 14, ie 11",
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "react"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "sanity",
      "sanity/react",
      "sanity/typescript",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "prettier/prettier": "error"
    },
    "root": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "dependencies": {
    "@sanity/client": "^3.3.3",
    "@sanity/groq-store": "^0.4.0",
    "groq": "^2.29.3"
  },
  "devDependencies": {
    "@async-fn/jest": "^1.5.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.0",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-sanity": "^5.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": ">=17.0.2",
    "react-dom": "^17.0.2",
    "semantic-release": "^19.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": "^16.3 || ^17"
  },
  "engines": {
    "node": ">=12"
  },
  "targets": {
    "studio": {
      "distDir": "./lib",
      "isLibrary": true,
      "source": "./src/studio/index.ts"
    },
    "preview": {
      "distDir": "./lib",
      "isLibrary": true,
      "source": "./src/preview/index.ts"
    }
  }
}
